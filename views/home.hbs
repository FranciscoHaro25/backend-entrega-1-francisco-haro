<div class="row">
  <div class="col-12">
    <h1>Bienvenido a Mi Tienda</h1>
    <p class="lead">Sistema de gestión de productos y carritos</p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Productos</h5>
        <p class="card-text">Total: {{productCount}} productos</p>
        <a href="/products" class="btn btn-primary">Ver productos</a>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Carritos</h5>
        <p class="card-text">Total: {{cartCount}} carritos</p>
        <a href="/carts" class="btn btn-success">Ver carritos</a>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">API</h5>
        <p class="card-text">Documentación de endpoints</p>
        <a href="/api/products" class="btn btn-info">Ver API</a>
      </div>
    </div>
  </div>
</div>