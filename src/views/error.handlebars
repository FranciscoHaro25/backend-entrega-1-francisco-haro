<div class="row">
  <div class="col-12">
    <div class="text-center py-5">
      <i
        class="bi bi-exclamation-triangle"
        style="font-size: 4rem; color: #dc3545;"
      ></i>
      <h1 class="mt-3">¡Oops! Algo salió mal</h1>
      <p class="lead text-muted">{{message}}</p>

      {{#if error}}
        <div class="alert alert-danger mt-4">
          <h6>Detalles del error:</h6>
          <code>{{error}}</code>
        </div>
      {{/if}}

      <div class="mt-4">
        <a href="/" class="btn btn-primary me-2">Volver al Inicio</a>
        <a href="/dashboard" class="btn btn-outline-secondary">Dashboard</a>
      </div>
    </div>
  </div>
</div>