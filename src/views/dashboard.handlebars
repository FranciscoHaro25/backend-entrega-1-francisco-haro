<div class="row">
  <div class="col-12">
    <h1>Dashboard - Estadísticas</h1>
    <p class="text-muted">Panel de control con métricas del negocio</p>
  </div>
</div>

<!-- Tarjetas de estadísticas -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <h5 class="card-title">Total Productos</h5>
        <h2>{{stats.totalProducts}}</h2>
        <small>En inventario</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body">
        <h5 class="card-title">Valor Total</h5>
        <h2>${{stats.totalValue}}</h2>
        <small>En stock</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-warning text-white">
      <div class="card-body">
        <h5 class="card-title">Stock Bajo</h5>
        <h2>{{stats.lowStock}}</h2>
        <small>Productos</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body">
        <h5 class="card-title">Categorías</h5>
        <h2>{{stats.categories}}</h2>
        <small>Diferentes</small>
      </div>
    </div>
  </div>
</div>

<!-- Productos recientes -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div
        class="card-header d-flex justify-content-between align-items-center"
      >
        <h5 class="mb-0">Últimos Productos</h5>
        <a href="/realtimeproducts" class="btn btn-primary btn-sm">
          Gestionar Productos
        </a>
      </div>
      <div class="card-body">
        {{#if products}}
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nombre</th>
                  <th>Categoría</th>
                  <th>Precio</th>
                  <th>Stock</th>
                  <th>Estado</th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                  <tr>
                    <td><span
                        class="badge bg-secondary"
                      >#{{this.id}}</span></td>
                    <td>{{this.title}}</td>
                    <td>{{this.category}}</td>
                    <td class="text-success fw-bold">${{this.price}}</td>
                    <td>
                      {{#if (lt this.stock 5)}}
                        <span class="badge bg-warning">{{this.stock}}</span>
                      {{else}}
                        <span class="badge bg-success">{{this.stock}}</span>
                      {{/if}}
                    </td>
                    <td>
                      {{#if this.status}}
                        <span class="badge bg-success">Activo</span>
                      {{else}}
                        <span class="badge bg-secondary">Inactivo</span>
                      {{/if}}
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <div class="text-center py-4">
            <i class="bi bi-box" style="font-size: 3rem; color: #ccc;"></i>
            <h5 class="mt-3">No hay productos</h5>
            <p class="text-muted">Agrega algunos productos para ver estadísticas</p>
            <a href="/realtimeproducts" class="btn btn-primary">
              Agregar Primer Producto
            </a>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<!-- Enlaces de navegación -->
<div class="row mt-4">
  <div class="col-12">
    <div class="d-flex gap-2">
      <a href="/" class="btn btn-outline-primary">Ver Tienda</a>
      <a href="/realtimeproducts" class="btn btn-outline-success">Gestión Tiempo
        Real</a>
    </div>
  </div>
</div>